<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>build</actionName>
            <goals>
                <goal>install</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-Restart jetty server</actionName>
            <displayName>Restart jetty server</displayName>
            <goals>
                <goal>jetty:stop</goal>
                <goal>jetty:run</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-Install vaadin widgetsets</actionName>
            <displayName>Install vaadin widgetsets</displayName>
            <goals>
                <goal>mvn</goal>
                <goal>vaadin:update-widgetset</goal>
                <goal>install</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-Compile widgetset</actionName>
            <displayName>Compile widgetset</displayName>
            <goals>
                <goal>gwt:compile</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-Jetty stop</actionName>
            <displayName>Jetty stop</displayName>
            <goals>
                <goal>jetty:stop</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-GWT compile</actionName>
            <displayName>GWT compile</displayName>
            <goals>
                <goal>gwt:compile</goal>
            </goals>
        </action>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <netbeans.deploy>true</netbeans.deploy>
                <netbeans.deploy.clientUrlPart>/admin/id:1</netbeans.deploy.clientUrlPart>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <netbeans.deploy>true</netbeans.deploy>
                <netbeans.deploy.clientUrlPart>/admin/id:1</netbeans.deploy.clientUrlPart>
                <netbeans.deploy.debugmode>true</netbeans.deploy.debugmode>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <netbeans.deploy>true</netbeans.deploy>
                <netbeans.deploy.clientUrlPart>/admin/id:1</netbeans.deploy.clientUrlPart>
                <netbeans.deploy.profilemode>true</netbeans.deploy.profilemode>
            </properties>
        </action>
    </actions>
